{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>{{ project.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <!-- ... (autres propriétés du projet) -->
        </tbody>
    </table>

    <h2>Tasks</h2>
    <ul>
        {% for task in project.tasks %}
            <li>
                {{ task.title }}
                <!-- Afficher d'autres propriétés de la tâche si nécessaire -->
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_project_index') }}">Retour à la liste des projets</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">Modifier le projet</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}

